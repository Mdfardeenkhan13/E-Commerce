<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>
      <main class="max-w-xl mx-auto mt-10 bg-white shadow-lg rounded-lg p-8">
        <h1 class="text-3xl font-bold text-red-500 text-center mb-8">Sign Up</h1><br>

        <form action="/signup" method="POST" class="space-y-6">
          <%- include('../partials/error') %>

              <div>
                <label for="firstName" class="block text-gray-700 font-semibold mb-2">First Name</label>
                <input type="text" name="firstName" id="firstName"
                  value="<%= oldInput.firstName ? oldInput.firstName : '' %>" placeholder="Enter First Name"
                  class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400" />
              </div><br>

              <div>
                <label for="lastName" class="block text-gray-700 font-semibold mb-2">Last Name</label>
                <input type="text" name="lastName" id="lastName"
                  value="<%= oldInput.lastName ? oldInput.lastName : '' %>" placeholder="Enter Last Name"
                  class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400" />
              </div><br>

              <div>
                <label for="email" class="block text-gray-700 font-semibold mb-2">E-Mail</label>
                <input type="email" name="email" id="email" value="<%= oldInput.email ? oldInput.email : '' %>"
                  placeholder="Enter E-Mail"
                  class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400" />
              </div><br>

              <div>
                <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
                <input type="password" name="password" id="password" placeholder="Enter your password"
                  class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400" />
              </div><br>

              <div>
                <label for="password" class="block text-gray-700 font-semibold mb-2">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm your password"
                  class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400" />
              </div><br>

              <div>
                <p>User Type:</p>
                <label>
                  <input type="radio" name="userType" value="guest" id="guest"
                    checked="<%=oldInput.userType === 'guest' %>" class="mr-2" />
                  <span>Guest</span>
                </label>
                <label>
                  <input type="radio" name="userType" value="host" id="host"
                    checked="<%=oldInput.userType === 'guest' %>" class="mr-2" />
                  <span>Host</span>
                </label>
              </div>

              <div>
                <input type="checkbox" name="terms" id="terms" class="mr-2" required />
                <label for="terms">I agree to the terms and conditions</label>
              </div>



              <div class="text-center">
                <button type="submit"
                  class="w-[200px] bg-red-500 text-white px-6 py-2 rounded-lg  hover:bg-red-600 transition duration-300 cursor-pointer">
                  Sign In
                </button>
              </div>
        </form>
      </main>
  </body>

  </html>