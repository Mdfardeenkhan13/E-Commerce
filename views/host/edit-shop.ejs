<%- include('../partials/head') %>
<body>
<%- include('../partials/header') %>
<main class="max-w-xl mx-auto mt-10 bg-white shadow-lg rounded-lg p-8">
  <h1 class="text-3xl font-bold text-red-500 text-center mb-8"> <%= editing ? 'Edit' : 'Add' %> Shop Details</h1><br>

  <form action="/host/<%= editing ? 'edit-shop' : 'add-shop'%>" method="POST" class="space-y-6">

    <input
      type="hidden"
      name="id"
      value="<%= editing ? shop._id : ''%>"
      />

    <div>
      <label for="product" class="block text-gray-700 font-semibold mb-2">Product Name</label>
      <input
        type="text"
        name="productName"
        value="<%= editing ? shop.productName : ''%>"
        id="productName"
        placeholder="Enter the name of your product"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
      />
    </div><br>

    <div>
      <label for="gender" class="block text-gray-700 font-semibold mb-2">Gender</label>
      <input
        type="text"
        name="gender"
        value="<%= editing ? shop.gender : ''%>"
        id="gender"
        placeholder="Enter gender"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
      />
    </div><br>

    <div>
      <label for="price" class="block text-gray-700 font-semibold mb-2">Price</label>
      <input
        type="text"
        name="price"
        value="<%= editing ? shop.price : ''%>"
        id="price"
        placeholder="Enter the price of your product"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
      />
    </div><br>

    <div>
      <label for="photo" class="block text-gray-700 font-semibold mb-2">Product Photo</label>
      <input
        type="text"
        name="productPhoto"
        value="<%= editing ? shop.productPhoto : ''%>"
        id="photo"
        placeholder="Enter the photo of your product"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400"
      />
    </div><br>

    <div>
      <label for="description" class="block text-gray-700 font-semibold mb-2">Description</label>
      <textarea
        name="description"
        id="description"
        value="<%= editing ? shop.description : ''%>"
        placeholder="Description of house"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-400">
      </textarea>
    </div><br>

    <div class="text-center">
      <button
        type="submit"
        class=  "w-[200px] bg-red-500 text-white px-6 py-2 rounded-lg  hover:bg-red-600 transition duration-300 "
      >
        <%= editing ? "Update": "Add"%>
      </button>
    </div>
  </form>
</main>
</body>
</html>